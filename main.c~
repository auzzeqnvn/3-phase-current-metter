            break;
        }
        case    7:
        {
            byte3 = 0x10;
            byte2 = 0x00;
            break;
        }
        case    8:
        {
            byte3 = 0x80;
            byte2 = 0x00;
            break;
        }
        case    9:
        {
            byte3 = 0x00;
            byte2 = 0x40;
            break;
        }
        case    10:
        {
            byte3 = 0x00;
            byte2 = 0x20;
            byte1 = 0x04;
            break;
        }
        case    11:
        {
            byte3 = 0x00;
            byte2 = 0x10;
            break;
        }
        case    12:
        {
            byte3 = 0x00;
            byte2 = 0x80;
            break;
        }
    }
    switch(data)
    {
        case    0:
        {
            byte1 |= 0xF9;
            break;
        }
        case    1:
